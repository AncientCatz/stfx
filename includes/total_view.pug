.ui.grid(v-if="current")
    .three.wide.column
        img(:src="img_get_ship_front(current)").ui.medium.centered.image
    .three.wide.column
        h5.ui.header Attack ranges
        sui-progress(indicating, :percent="(ship_damage_perc[1]|0)", size="tiny", :label="'I:   ' + String(ship_damage[1]|0)")
        sui-progress(indicating, :percent="(ship_damage_perc[2]|0)", size="tiny", :label="'II: ' + String(ship_damage[2]|0)")
        sui-progress(indicating, :percent="(ship_damage_perc[3]|0)", size="tiny", :label="'III: ' + String(ship_damage[3]|0)")
        sui-progress(indicating, :percent="(ship_damage_perc[4]|0)", size="tiny", :label="'IV:  ' + String(ship_damage[4]|0)")
        sui-progress(indicating, :percent="(ship_damage_perc[5]|0)", size="tiny", :label="'V:   ' + String(ship_damage[5]|0)")
    .three.wide.column
        h5.ui.header Skill pools
        sui-progress(indicating, :percent="(crew_ship_pool_perc.gunnery|0)", size="tiny", :label="'Pilot '       + String(crew_pool.pilot|0) + '/' + String(ship_pool.pilot|0)")
        sui-progress(indicating, :percent="(crew_ship_pool_perc.gunnery|0)", size="tiny", :label="'Ship Ops '    + String(crew_pool.shipops|0) + '/' + String(ship_pool.shipops|0)")
        sui-progress(indicating, :percent="(crew_ship_pool_perc.gunnery|0)", size="tiny", :label="'Gunnery '     + String(crew_pool.gunnery|0) + '/' + String(ship_pool.gunnery|0)")
        sui-progress(indicating, :percent="(crew_ship_pool_perc.gunnery|0)", size="tiny", :label="'Electronics ' + String(crew_pool.electronics|0) + '/' + String(ship_pool.electronics|0)")
        sui-progress(indicating, :percent="(crew_ship_pool_perc.gunnery|0)", size="tiny", :label="'Navigation '  + String(crew_pool.navigation|0) + '/' + String(ship_pool.navigation|0)")



    mixin entry(name, value)
        .item
            .right.floated.content= value
            .content= name

    .two.wide.column
        .ui.list
            +entry("mass", 2)
            +entry("hull", 3)
            +entry("fuel", 3)
            +entry("armor", 3)
            +entry("shield", 3)
            +entry("medical", 3)
            +entry("passengers", 3)
            +entry("prisoners", 3)
            +entry("craft", 3)
